<% include header %>

		<form method="post">
			<p><b>Create a new client</b></p>

			<div>
				Client Name <span class="details">(FIRST / MIDDLE (OPTIONAL) / LAST)</span>
				<table>
					<tr>
						<td>Eve</td>
						<td>Jackson</td> 
						<td>94</td>
					</tr>
				</table>
				<div>
					<input type="text" name="first" placeholder="First" required>
					<input type="text" name="middle" placeholder="Middle (OPTIONAL)">
					<input type="text" name="last" placeholder="Last" required>
				</div>
			</div>

			<br>

			<div>
				Date of Birth <span class="details">(YEAR / MONTH / DAY)</span>
				<div>
					<input type="number" name="year" min="1900" max="2016" placeholder="1920" required>
					<input type="number" name="month" min="1" max="12" placeholder="1" required>
					<input type="number" name="day" min="1" max="31" placeholder="1" required>
				</div>
			</div>

			<br>

			<div>
				Optional Values
				<div>
					<input type="text" name="case_num" placeholder="Case Number">
					<small class="details">(Case Number)</small>

					<br><input type="text" name="so" placeholder="Sheriff Number">
					<small class="details">(SO#)</small>

					<br><input type="text" name="otn" placeholder="Offender Tracking Number">
					<small class="details">(OTN)</small>

				</div>
				<input type="submit" value="Submit" style="font-size: 2em; font-weight: 900; float: right;">
			</div>
		</form>
		<hr>
	</div>

